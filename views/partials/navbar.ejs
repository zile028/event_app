<!-- ============================================================== -->
<!-- Navigation Header - Top navigation bar with logo and user menu -->
<!-- ============================================================== -->
<header class="topbar" data-navbarbg="skin5">
  <nav class="navbar top-navbar navbar-expand-md navbar-dark">
    <!-- Logo Section -->
    <div class="navbar-header" data-logobg="skin5">
      <a class="navbar-brand" href="/">
        <b class="logo-icon ps-2">
          <img
            src="/assets/images/logo-icon.png"
            alt="Event App Logo"
            class="light-logo"
            width="25"
          />
        </b>
        <span class="logo-text ms-2">
          <img
            src="/assets/images/logo-text.png"
            alt="Event App"
            class="light-logo"
          />
        </span>
      </a>
      
      <!-- Mobile Toggle Button -->
      <a
        class="nav-toggler waves-effect waves-light d-block d-md-none"
        href="javascript:void(0)"
      >
        <i class="ti-menu ti-close"></i>
      </a>
    </div>

    <!-- Navigation Content -->
    <div
      class="navbar-collapse collapse"
      id="navbarSupportedContent"
      data-navbarbg="skin5"
    >
      <!-- Left Navigation Items -->
      <ul class="navbar-nav float-start me-auto">
        <!-- Sidebar Toggle -->
        <li class="nav-item d-none d-lg-block">
          <a
            class="nav-link sidebartoggler waves-effect waves-light"
            href="javascript:void(0)"
            data-sidebartype="mini-sidebar"
          >
            <i class="mdi mdi-menu font-24"></i>
          </a>
        </li>

        <!-- Create New Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="createDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <span class="d-none d-md-block">
              Kreiraj novo <i class="fa fa-angle-down"></i>
            </span>
            <span class="d-block d-md-none">
              <i class="fa fa-plus"></i>
            </span>
          </a>
          <ul class="dropdown-menu" aria-labelledby="createDropdown">
            <li>
              <a class="dropdown-item" href="/event/create">
                <i class="mdi mdi-calendar-plus me-2"></i>Novi događaj
              </a>
            </li>
          </ul>
        </li>

        <!-- Search Box -->
        <li class="nav-item search-box">
          <a 
            class="nav-link waves-effect waves-dark" 
            href="javascript:void(0)"
          >
            <i class="mdi mdi-magnify fs-4"></i>
          </a>
          <form class="app-search position-absolute">
            <input
              type="text"
              class="form-control"
              placeholder="Pretraži eventi..."
            />
            <a class="srh-btn">
              <i class="mdi mdi-window-close"></i>
            </a>
          </form>
        </li>
      </ul>

      <!-- Right Navigation Items -->
      <ul class="navbar-nav float-end">
        <!-- Notifications -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="notificationDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="mdi mdi-bell font-24"></i>
          </a>
          <ul class="dropdown-menu" aria-labelledby="notificationDropdown">
            <li>
              <div class="dropdown-header">Obaveštenja</div>
            </li>
            <li>
              <a class="dropdown-item" href="#">Nema novih obaveštenja</a>
            </li>
          </ul>
        </li>

        <!-- Messages -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle waves-effect waves-dark"
            href="#"
            id="messagesDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="font-24 mdi mdi-comment-processing"></i>
          </a>
          <ul
            class="dropdown-menu dropdown-menu-end mailbox animated bounceInDown"
            aria-labelledby="messagesDropdown"
          >
            <ul class="list-style-none">
              <li>
                <div class="dropdown-header">Brze akcije</div>
                <a href="/event" class="link border-top">
                  <div class="d-flex no-block align-items-center p-10">
                    <span class="btn btn-success btn-circle d-flex align-items-center justify-content-center">
                      <i class="mdi mdi-calendar text-white fs-4"></i>
                    </span>
                    <div class="ms-2">
                      <h5 class="mb-0">Svi događaji</h5>
                      <span class="mail-desc">Pregledaj sve događaje</span>
                    </div>
                  </div>
                </a>
                <a href="/event/gallery" class="link border-top">
                  <div class="d-flex no-block align-items-center p-10">
                    <span class="btn btn-info btn-circle d-flex align-items-center justify-content-center">
                      <i class="mdi mdi-image fs-4"></i>
                    </span>
                    <div class="ms-2">
                      <h5 class="mb-0">Galerija</h5>
                      <span class="mail-desc">Pogledaj galeriju događaja</span>
                    </div>
                  </div>
                </a>
              </li>
            </ul>
          </ul>
        </li>

        <!-- User Profile Dropdown -->
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic"
            href="#"
            id="userDropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="/<%= user.avatar %>"
              alt="<%= user.firstName %> <%= user.lastName %>"
              class="rounded-circle"
              width="31"
            />
          </a>
          <ul
            class="dropdown-menu dropdown-menu-end user-dd animated"
            aria-labelledby="userDropdown"
          >
            <li class="dropdown-header">
              <%= user.firstName %> <%= user.lastName %>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <a class="dropdown-item" href="/user/profile">
                <i class="mdi mdi-account me-1 ms-1"></i>Moj profil
              </a>
            </li>
            <li>
              <a class="dropdown-item" href="/user/edit">
                <i class="mdi mdi-settings me-1 ms-1"></i>Postavke naloga
              </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <a class="dropdown-item" href="/auth/logout">
                <i class="fa fa-power-off me-1 ms-1"></i>Odjavi se
              </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li class="ps-4 p-10">
              <a
                href="/user/profile"
                class="btn btn-sm btn-success btn-rounded text-white"
              >
                Prikaži profil
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
<!-- ============================================================== -->
<!-- End Navigation Header -->
<!-- ============================================================== -->
