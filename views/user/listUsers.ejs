<%- include("../partials/top") %>
<%- include("../partials/navbar") %>
<%- include("../partials/sidebar") %>

<div class="page-wrapper">
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Lista korisnika</h4>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="card">
      <div class="card-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Ime</th>
              <th>Prezime</th>
              <th>Email</th>
              <th>Uloga</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((u, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= u.firstName %></td>
                <td><%= u.lastName %></td>
                <td><%= u.email %></td>
                <td><%= u.role %></td>
                <td><%= u.active ? "Aktivan" : "Neaktivan" %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/bottom") %>
